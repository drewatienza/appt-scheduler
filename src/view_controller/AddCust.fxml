<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            fx:controller="view_controller.AddCustController"
            prefHeight="500.0" prefWidth="450.0" >
    <children>
        <Label fx:id="addCustTitle" layoutX="25.0" layoutY="20.0" text="Add Customer">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label fx:id="addCustNameLabel" layoutX="40.0" layoutY="70.0" text="Customer Name" />
        <TextField fx:id="addCustNameField" layoutX="190.0" layoutY="66.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="Customer Name" />

        <Label fx:id="addCustAdd1Label" layoutX="40.0" layoutY="125.0" text="Address" />
        <TextField fx:id="addCustAdd1Field" layoutX="190.0" layoutY="121.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="Address" />

        <Label fx:id="addCustAdd2Label" layoutX="40.0" layoutY="180.0" text="Address Line 2" />
        <TextField fx:id="addCustAdd2Field" layoutX="190.0" layoutY="176.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="Address Line 2" />

        <Label fx:id="addCustCityLabel" layoutX="40.0" layoutY="235.0" text="City" />
        <TextField fx:id="addCustCityField" layoutX="190.0" layoutY="231.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="City" />

        <Label fx:id="addCustCountryLabel" layoutX="40.0" layoutY="290.0" text="Country" />
        <TextField fx:id="addCustCountryField" layoutX="190.0" layoutY="286.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="Country" />

        <Label fx:id="addCustPostalLabel" layoutX="40.0" layoutY="345.0" text="Zip Code" />
        <TextField fx:id="addCustPostalField" layoutX="190.0" layoutY="341.0" prefHeight="25.0"
                   prefWidth="200.0" promptText="Zip Code" />

        <Label fx:id="addCustPhoneLabel" layoutX="40.0" layoutY="400.0" text="Phone" />
        <TextField fx:id="addCustPhoneField" layoutX="190.0" layoutY="396.0" prefHeight="25.0" prefWidth="200.0"
                   promptText="Phone" />

        <Button fx:id="addCustSaveBtn" layoutX="205.0" layoutY="450.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="80.0" text="Save" />
        <Button fx:id="addCustCancelBtn" alignment="CENTER" layoutX="305.0" layoutY="450.0"
                mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="Cancel" />
    </children>
</AnchorPane>
