<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            fx:controller="view_controller.AppointmentController"
            prefHeight="375.0" prefWidth="750.0">

    <children>
        <Label layoutX="25.0" layoutY="20.0" text="Appointment Menu">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <TableView fx:id="apptTableView" layoutX="50.0" layoutY="75.0" prefHeight="250.0" prefWidth="475.0">
            <columns>
                <TableColumn fx:id="apptTitleColumnTV" prefWidth="200.0" text="Title" />
                <TableColumn fx:id="apptDateColumnTV" prefWidth="125.0" text="Date" />
                <TableColumn fx:id="apptContactColumnTV" prefWidth="150.0" text="Contact" />
            </columns>
        </TableView>

        <Button fx:id="addApptBtn" layoutX="550.0" layoutY="75.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="150.0" text="Add" />
        <Button fx:id="modApptBtn" layoutX="550.0" layoutY="115.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="150.0" text="Modify" />
        <Button fx:id="delApptBtn" layoutX="550.0" layoutY="155.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="150.0" text="Delete" />
        <Button fx:id="calendarBtn" layoutX="550.0" layoutY="195.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="150.0" text="Calendar View" />
        <Button fx:id="mainMenuBtn" layoutX="550.0" layoutY="235.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="150.0" text="Main Menu" />
        <Button fx:id="exitApptBtn" layoutX="550.0" layoutY="275.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="150.0" text="Exit" />

    </children>
</AnchorPane>
