<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane fx:id="apptScreenGrid"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view_controller.CalendarViewController"
          prefHeight="600.0" prefWidth="800.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="Infinity" minWidth="10.0" prefWidth="775.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="Infinity" minHeight="10.0" prefHeight="450.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
                <Button fx:id="mainScrCurrentDateBtn" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="150.0" text="Go to Current Date">
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </Button>
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="mainScrToggleViewBtn" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="180.0" text="Switch to Weekly View">
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </HBox>
        
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
            <padding>
                <Insets top="10.0" bottom="10.0" />
            </padding>
            <children>
                <Button fx:id="apptMenuBtnCV" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0"
                        text="Appointment Menu">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Pane prefHeight="50.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="custMenuBtnCV" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0"
                        text="Customer Menu">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Pane prefHeight="50.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="reportsBtnCV" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0"
                        text="Reports">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Pane prefHeight="50.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="apptExitBtnCV" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Exit">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</GridPane>
